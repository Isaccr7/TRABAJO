<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRABAJO.View.producto.VPProducto"
             Title="Productos"
             xmlns:producto="clr-namespace:TRABAJO.View.producto">
    <ContentPage.Content>
        <StackLayout BackgroundColor="{StaticResource PKColor}" >
            <Frame CornerRadius="50" HasShadow="False" Margin="30,20" Padding="5" >
                <StackLayout>
                    <Entry Placeholder="Buscar..." />
                </StackLayout>
            </Frame>
            <Grid ColumnDefinitions="*,*,*">
                <Button Grid.Column="0"
                        Text="Hotel"
                        CornerRadius="50"
                        Margin="10,0"
                        BackgroundColor="Green"
                        TextColor="White"
                        FontAttributes="Bold"/>
                <Button Grid.Column="1"
        Text="Hotel"
        CornerRadius="50"
        Margin="10,0"
        FontAttributes="Bold"/>
                <Button Grid.Column="2"
        Text="Hotel"
        CornerRadius="50"
        Margin="10,0"
        FontAttributes="Bold"/>
            </Grid>
            <Frame Padding="0">
                
            </Frame>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>